# JWT ключ (минимум 32 символа)
SECRET_KEY=your-secret-key-here-minimum-32-characters-required-for-jwt-auth

# Telegram Bot Token (получить у @BotFather)
TG_TOKEN=your-telegram-bot-token-here

# Настройки API
API_HOST=0.0.0.0
API_PORT=8002

